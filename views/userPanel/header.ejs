    <script>
        // Function to format and display the date
        function updateDate() {
            const dateElement = document.getElementById("dateDisplay");
            const now = new Date();
            
            // Get day, month, and year
            const day = now.getDate();
            const month = now.toLocaleString('en-US', { month: 'long' }); // Full month name
            const year = now.getFullYear();
            
            // Temperature and location (static for now, replace with actual data if needed)
            const location = "New Delhi";
            
            // Format the date
            const formattedDate = `${month} ${day}, ${year} - ${location} `;
            
            // Set the text
            dateElement.textContent = formattedDate;
        }
    
        // Call the function on page load
        updateDate();
    </script>