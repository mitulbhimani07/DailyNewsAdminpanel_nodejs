<%- include('../userPanel/header')%>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <aside class="col-md-3 vh-100 py-5" style="overflow-y: auto;">
                <ul class="nav flex-column">
                    <a class="nav-link active text-white" href="/">➤ Home</a>
                    <% categoryUserData.map((v, i)=> { %>
                        <li class="nav-item">
                            <a class="nav-link active text-white" href="/?catId=<%= v.id %>">
                                ➤ <%= v.categoryname %> (<%= v.blogid.length %>)
                            </a>
                        </li>
                        <% }) %>
                </ul>
            </aside>

            <!-- Main Content -->
            <main class="col-md-7 py-5 row">
                <!-- Search Bar -->

                <div class="col-lg-12">
                    <div class="main-news">
                        <h2 class="secHdg htImpressionTrackingTop" data-vars-widget-name="Top News"
                            data-vars-placement-number="1">
                            <span class="hdgTexure">
                                <hr>
                            </span>
                            <span class="hdgStyle"><span>[</span>Hindustan Times News<span>]</span></span>
                        </h2>
                        <!-- Search Bar -->
                        <!-- Search Bar -->
                        <div class="w-full mb-4 flex justify-center">
                            <form method="GET" action="/" class="flex items-center gap-2 w-full max-w-md">
                                <input style="width: 85%;" type="text" name="search" 
                                    class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-300 shadow-sm"
                                    placeholder="Search blogs..." value="<%= searchQuery %>"  />
                                <button type="submit"
                                    class="px-4 py-2 bg-blue-600 text-back rounded-lg hover:bg-blue-700 transition duration-300 shadow-md">
                                    Search
                                </button>
                                
                            </form>
                            <!-- <a href="/" style="padding:3px 9px; border: 1px solid black; color: black; text-decoration: none;">reset</a> -->
                        </div>

                        <marquee>कुम्भ मेला भारत में आयोजित होने वाला एक विशाल मेला है...</marquee>
                        <hr>
                        <% BloguserData.map((v,i)=>{ %>
                            <img src="<%= v.Blogimage %>" alt="Iklan 1" width="100px">
                            <h4>
                                <%=v.titleName %>
                            </h4>
                            <p><%-v.aboutName.substr(0,50) %></p>
                            <a style="text-decoration: none; font-size: 14px;" href="/readMore/<%= v.id %>">Read
                                More</a>
                            <hr>
                            <% }) %>
                    </div>

                    <!-- Pagination Controls -->
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center">
                            <% if (currentPage> 1) { %>
                                <li class="page-item"><a class="page-link"
                                        href="/?page=<%= currentPage - 1 %>&search=<%= searchQuery %>">Previous</a></li>
                                <% } %>
                                    <% for (let i=1; i <=totalPages; i++) { %>
                                        <li class="page-item <%= currentPage === i ? 'active' : '' %>"><a
                                                class="page-link" href="/?page=<%= i %>&search=<%= searchQuery %>">
                                                <%= i %>
                                            </a></li>
                                        <% } %>
                                            <% if (currentPage < totalPages) { %>
                                                <li class="page-item"><a class="page-link"
                                                        href="/?page=<%= currentPage + 1 %>&search=<%= searchQuery %>">Next</a>
                                                </li>
                                                <% } %>
                        </ul>
                    </nav>
                </div>
            </main>

            <div class="col-lg-3">
                <!-- Sidebar -->
                <div class="sidebar mt-5">
                    <h2 class="secHdg htImpressionTrackingTop" data-vars-widget-name="Top News"
                        data-vars-placement-number="1">
                        <span class="hdgTexure">
                            <hr>
                        </span>
                        <span class="hdgStyle"><span>[</span>Latest News<span>]</span></span>
                    </h2>
                    <marquee>कुम्भ मेला भारत में आयोजित होने वाला एक विशाल मेला है...</marquee>
                    <hr>
                    <div class="ad">
                        <% BloguserData.map((v,i)=>{ %>
                            <h6>
                                <%=v.titleName %>
                            </h6>
                            <hr>
                            <img src="<%= v.Blogimage %>" alt="Iklan 1">
                            <% }) %>
                    </div>
                </div>
            </div>
        </div>
    </div>


    </body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/overlayscrollbars@2.10.1/browser/overlayscrollbars.browser.es6.min.js"
        integrity="sha256-dgubz46cazjmq3xnfhinzvjao8gsycehahlkfm4ngyuvhgb4=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
        integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
        crossorigin="anonymous"></script>
    <script src="/js/usePanel.js"></script>

    </html>