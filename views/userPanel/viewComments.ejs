<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Active Comments</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/css/bootstrap.min.css">
</head>

<body class="bg-light">

    <!-- Include Header -->
    <%- include("../header") %>

    <!-- Main Content -->
    <div class="container mt-4 mb-4">
        <h1 class="mb-4 text-center">Comment Section</h1>

        <div class="card shadow-sm">
            <div class="card-body">
                <% if (viewCommentsActive && viewCommentsActive.length > 0) { %>
                    <div class="row">
                        <% viewCommentsActive.map((v, i) => { %>
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card border-0 shadow-sm h-100">
                                    <div class="card-body d-flex align-items-center">
                                        <img src="<%= v.image %>" alt="User Image" height="60" width="60"
                                            class="rounded-circle me-3">
                                        <div>
                                            <h5 class="fw-bold mb-1">
                                                <%= v.name %>
                                            </h5>
                                            <p class="mb-1 text-muted"><strong>Email:</strong>
                                                <%= v.email %>
                                            </p>
                                            <p class="text-secondary mb-0"><strong>Comments:</strong>
                                                <%= v.comments %>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                <% } else { %>
                    <p class="text-muted text-center">No active comments available.</p>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Include Footer -->
    <%- include("../footer") %>

    <!-- Bootstrap JS -->
    <script src="/js/bootstrap.bundle.min.js"></script>
</body>

</html>
